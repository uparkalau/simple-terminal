{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"]
}
